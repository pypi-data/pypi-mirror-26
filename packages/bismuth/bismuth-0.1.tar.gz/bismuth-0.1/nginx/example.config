# bismuth reverse proxy configuration

upstream sanic {
	server 127.0.0.1:8000;
	keepalive 16;
}

map $http_upgrade $connection_upgrade {
	default upgrade;
	'' close;
}

server {
	listen 55555 ssl http2 default_server;
	listen [::]:55555 ssl http2 default_server ipv6only=on;
	server_name example.com;
	server_tokens off;

	charset UTF-8;

	ssl on;
	ssl_certificate /opt/bismuth/nginx/ssl/fullchain.pem;
	ssl_certificate_key /opt/bismuth/nginx/ssl/privkey.pem;
	ssl_stapling on;
	ssl_stapling_verify on;
	ssl_trusted_certificate /opt/bismuth/nginx/ssl/chain.pem;
	ssl_dhparam /opt/bismuth/nginx/ssl/dhparam.pem;

	root /opt/bismuth/src/bismuth_jsclient;
	proxy_set_header Host $host;
	proxy_set_header X-Real-Ip $remote_addr;
	proxy_set_header X-Real-Port $remote_port;
	proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

	location @bismuth {  # proxy fallback
		proxy_pass http://sanic;
	}
	location = / {  # server root
		try_files /app.html @bismuth;
	}
	location = /ws {  # websockets
		proxy_pass http://sanic;
		proxy_http_version 1.1;
		proxy_set_header X-Real-Ip $remote_addr;
		proxy_set_header X-Real-Port $remote_port;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Upgrade $http_upgrade;
		proxy_set_header Connection $connection_upgrade;
		proxy_read_timeout 24d;
	}
	location = /app.html {  # do not serve app.html at its location
		proxy_pass http://sanic;
	}
	location / {  # serve any other static files
		try_files $uri @bismuth;
	}
}
