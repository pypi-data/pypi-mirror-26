{
    "data": {
        "url": "https://vega.github.io/vega-lite/data/flights-2k.json"
    },
    "layers": [
        {
            "encoding": {
                "x": {
                    "bin": true,
                    "field": "distance",
                    "type": "quantitative"
                },
                "y": {
                    "aggregate": "count",
                    "field": "*",
                    "type": "quantitative"
                }
            },
            "mark": "bar"
        },
        {
            "encoding": {
                "color": {
                    "value": "goldenrod"
                },
                "x": {
                    "bin": true,
                    "field": "distance",
                    "type": "quantitative"
                },
                "y": {
                    "aggregate": "count",
                    "field": "*",
                    "type": "quantitative"
                }
            },
            "mark": "bar",
            "transform": {
                "filter": "datum.delay < 5"
            }
        }
    ]
}