{
    "config": {
        "facet": {
            "cell": {
                "strokeWidth": 0
            }
        }
    },
    "data": {
        "url": "https://vega.github.io/vega-lite/data/population.json"
    },
    "encoding": {
        "color": {
            "field": "gender",
            "scale": {
                "range": [
                    "#EA98D2",
                    "#659CCA"
                ]
            },
            "type": "nominal"
        },
        "row": {
            "axis": {
                "axisWidth": 1,
                "offset": -8,
                "orient": "left"
            },
            "field": "age",
            "scale": {
                "padding": 4
            },
            "type": "ordinal"
        },
        "x": {
            "aggregate": "sum",
            "axis": {
                "grid": false,
                "title": "population"
            },
            "field": "people",
            "type": "quantitative"
        },
        "y": {
            "axis": false,
            "field": "gender",
            "scale": {
                "bandSize": 6
            },
            "type": "nominal"
        }
    },
    "mark": "bar",
    "transform": {
        "calculate": [
            {
                "expr": "datum.sex == 2 ? \"Female\" : \"Male\"",
                "field": "gender"
            }
        ],
        "filter": "datum.year == 2000"
    }
}