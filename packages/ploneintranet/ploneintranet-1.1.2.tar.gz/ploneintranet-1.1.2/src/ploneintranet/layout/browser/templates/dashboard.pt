<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ploneintranet">

  <body class="view-secure">
    <metal:content fill-slot="content">
      <tal:dashboard define="dashboard view/default_dashboard;
                             current_user context/portal_membership/getAuthenticatedMember;
                             user_name current_user/getUserName">

        <form class="canvas-toolbar pat-inject pat-autosubmit" action="${portal_url}/#dashboard">
          <label class="bare pat-select">
            <select name="dashboard">
              <option value="activity" i18n:translate="" tal:attributes="selected python:dashboard == 'activity' and 'selected' or nothing">
                Activity centric view
              </option>
              <option value="task" i18n:translate="" tal:attributes="selected python:dashboard == 'task' and 'selected' or nothing">
                Task centric view
              </option>
            </select>
          </label>
        </form>


        <div id="dashboard"
             class="row pat-masonry"
             data-pat-masonry="column-width: .grid-sizer; gutter: 0; item-selector: .portlet; stamp: .stamp;"
             tal:condition="python: dashboard == 'activity'">
          <div class="grid-sizer four columns"></div>
          <div tal:repeat="tile view/activity_tiles" data-tile="${tile}"/>
          <div class="portlet span-2 stamp right" id="portlet-activity-stream">
            <div class="content">
              <form data-tile="./@@newpostbox.tile"/>
              <div data-tile="./@@activitystream.tile?stream_filter_menu=1"/>
            </div>
          </div>
        </div>

        <div id="dashboard"
             class="row pat-masonry"
             data-pat-masonry="column-width: .grid-sizer; gutter: 0; item-selector: .portlet;stamp: .stamp;"
             tal:condition="python: dashboard == 'task'">
          <div class="grid-sizer four columns"></div>
          <div tal:repeat="tile view/task_tiles" data-tile="${tile}"/>
        </div>
      </tal:dashboard>
    </metal:content>
  </body>
</html>
