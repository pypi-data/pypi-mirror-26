<?xml version="1.0"?>
<tryton>
    <data>

        <!-- views -->
        <record model="ir.ui.view" id="pimmemos_note_view_form">
            <field name="model">pim_memos.note</field>
            <field name="type">form</field>
            <field name="name">memos_form</field>
        </record>
        <record model="ir.ui.view" id="pimmemos_note_view_tree">
            <field name="model">pim_memos.note</field>
            <field name="type">tree</field>
            <field name="name">memos_tree</field>
        </record>
        <!-- action-window -->
        <record model="ir.action.act_window" id="act_pimmemos_note_form">
            <field name="name">Memos</field>
            <field name="res_model">pim_memos.note</field>
        </record>

        <!-- action-view -->
        <record model="ir.action.act_window.view" id="act_pimmemos_note_form_view1">
            <field name="sequence" eval="10"/>
            <field name="view" ref="pimmemos_note_view_tree"/>
            <field name="act_window" ref="act_pimmemos_note_form"/>
        </record>
        <record model="ir.action.act_window.view" id="act_pimmemos_note_form_view2">
            <field name="sequence" eval="20"/>
            <field name="view" ref="pimmemos_note_view_form"/>
            <field name="act_window" ref="act_pimmemos_note_form"/>
        </record>

        <menuitem action="act_pimmemos_note_form"
            id="menu_pimmemos_note" icon="mds-memo-redpin"/>

        <!-- permission - deny all -->
        <record model="ir.model.access" id="access_pimmemos_note">
            <field name="model" search="[('model', '=', 'pim_memos.note')]"/>
            <field name="perm_read" eval="False"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_delete" eval="False"/>
        </record>

    </data>
</tryton>
