{
  "$schema": "http://json-schema.org/schema#",
  "description": "Schema for PyDNServer DNS lookup config",

  "definitions": {
    "host_config": {
      "type": "object",
      "properties": {
        "redirect_hostname": {"type": ["string", "null"]},
        "address": {"type": "string"},
        "active": {"type": "boolean"}
      },
      "required": ["redirect_hostname", "address", "active"],
      "additionalProperties": false
    }
  },

  "type": "object",
  "additionalProperties": { "$ref": "#/definitions/host_config" }
}